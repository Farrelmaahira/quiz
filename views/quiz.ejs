<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Quiz</title>
    <link href="/css/output.css" rel="stylesheet" />
  </head>
  <style>
    .kartu-1 {
      background-color: transparent;
      perspective: 1000px;
    }

    .kartu-isinya {
      position: relative;
      transition: transform 0.8s;
      transform-style: preserve-3d;
    }

    .kartu-1.clicked .kartu-isinya {
      transform: rotateY(180deg);
      transition: transform 1s;
    }

    .kartu-depanya,
    .kartu-belakangnya {
      position: absolute;
      width: 100%;
      height: 100%;
      -webkit-backface-visibility: hidden;
      backface-visibility: hidden;
    }

    .kartu-belakangnya {
      transform: rotateY(180deg);
    }
  </style>

  <body class="bg-gradient-to-br from-indigo-50 to-white dark:from-gray-900 dark:to-gray-800">
    <div class="w-full bg-indigo-200 h-4 overflow-hidden hidden" id="progress-container">
      <div
        id="progress-bar"
        class="bg-gradient-to-r from-indigo-600 to-purple-600 h-full transition-all duration-1000 ease-linear hidden"
        style="width: 0%"
      ></div>
    </div>

    <div class="flex items-center justify-center min-h-screen">
      <div class="container p-3 mx-auto flex flex-col items-center">
        <% if('image' in question) { %>
        <img 
          src="images/<%= question.image %>" 
          class="w-1/2 h-96 rounded-xl shadow-lg mb-6 object-cover transform transition-transform duration-300 hover:scale-105" 
          alt="" 
        />
        <% } %>
        <div class="kartu-1 w-1/2 h-96 md:h-1/2" id="quiz-card">
          <div class="kartu-isinya h-auto " style="height: 50vh;">
            <div
              class="kartu-depanya bg-white dark:bg-gray-800 p-6 rounded-xl shadow-2xl border border-indigo-100 dark:border-gray-700"
            >
              <h1
                class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-purple-600 dark:from-indigo-400 dark:to-purple-400 text-center mb-6"
              >
                <%= question.questionText %>
              </h1>
              <div id="options" class="grid grid-rows-4 gap-4 my-2">
                <% question.choices.forEach(function(item,index){ %>
                <div
                  class="option-card bg-gradient-to-r from-indigo-500 to-purple-500 text-white rounded-xl p-4 text-center cursor-pointer hover:from-indigo-600 hover:to-purple-600 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg"
                  data-answer="<%= item.choiceId %>"
                  id="choice"
                >
                  <%= item.text %>
                  <form
                    action="/submit-answer/<%= code %>/<%= question.questionId %>"
                    isinya="<%= item.choiceId %>"
                    method="post"
                    id="form"
                    class="form"
                  >
                    <input
                      id="jawabanDipilih"
                      type="hidden"
                      name="choices"
                      value="<%= item.choiceId %>"
                    />
                  </form>
                </div>
                <form
                  action="/submit-answer/<%= code %>/<%= question.questionId %>"
                  isinya="<%= item.choiceId %>"
                  method="post"
                  id="nullForm"
                  class="form hidden"
                >
                  <input
                    id="jawabanDipilih"
                    type="hidden"
                    name="choices"
                    value=""
                  />
                </form>
                <% }) %>
              </div>
            </div>
            <div
              class="kartu-belakangnya flex items-center justify-center bg-gradient-to-r from-indigo-600 to-purple-600 dark:from-indigo-500 dark:to-purple-500 p-6 rounded-xl shadow-2xl text-white"
            >
              <% const correctChoice=question.choices.find(choice=> choice.correctAnswer)%>
              <h1 id="cC" class="text-2xl font-bold text-center" >
                Correct Answer: <%= correctChoice.choiceId %>. <%= correctChoice.text %>
              </h1>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
    const question = <%- JSON.stringify(question) %>;
    const options = document.querySelectorAll(".option-card");
    const quizCard = document.getElementById("quiz-card");
    const progressBar = document.getElementById("progress-bar");
    const progressContainer = document.getElementById("progress-container");
    let timeLeft = question.timer;

    const formSubmit = (form) => {
      form.submit();
    }

    if('timer' in question) {
      progressContainer.classList.remove('hidden');
      progressBar.classList.remove('hidden');
      let timeInterval;
      if(timeLeft !== null) {
        const form = document.getElementById("nullForm");
        const totalDuration = timeLeft;

        timeInterval = setInterval(() => {
          console.log(timeLeft);
          timeLeft--;
          
          const progress = ((totalDuration - timeLeft) / totalDuration) * 100;
          progressBar.style.width = `${progress}%`;

          if(timeLeft === 0) {
            clearInterval(timeInterval);
            quizCard.classList.toggle("clicked");
            setTimeout(() => {
              formSubmit(form);
            }, 3000);
          }
        }, 1000);

        if(timeLeft === 0) {
          console.log('hehe');
        }
      }
    }

    options.forEach((option) => {
      option.addEventListener("click", () => {
        quizCard.classList.toggle("clicked");
        setTimeout(() => {
          const form = option.querySelector(".form");
          if (form) {
            formSubmit(form);
          }
        }, 3000);
        const audioV = new Audio("audio/correct-choice-43861.mp3");
        const audioX = new Audio("audio/error-sound-39539.mp3");
        const jawabanBenar = question.correctAnswer;
        const jawabanDipilih = option.querySelector(".form").attributes.isinya.nodeValue;
        if (jawabanDipilih == jawabanBenar) {
          audioV.play();
        } else {
          audioX.play();
        }
      });
    });
    </script>
  </body>
</html>